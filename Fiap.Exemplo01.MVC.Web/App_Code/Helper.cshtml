@helper Submit(string  value, string classe) {
    <input type="submit" value="@value" class="@classe" />
}

@helper Message(string mensagem) {
    if (@mensagem != null)
    {
        <div class="alert alert-dismissable alert-success">
            @mensagem
            <p><a href="/Cliente/Listar">Listar</a></p>
        </div>
    }
}
