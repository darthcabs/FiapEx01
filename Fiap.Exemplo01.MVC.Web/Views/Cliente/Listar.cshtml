@model List<Fiap.Exemplo01.MVC.Web.Models.Cliente>
@{
    ViewBag.Title = "Lista de clientes";
}
<br />
<h2>Lista de clientes</h2>
<br />
<a class="btn btn-default" href="/Cliente/Cadastrar">Novo cliente</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Idade</th>
            <th>Crédito</th>
            <th>Data de nascimento</th>
            <th>Necessidades especiais</th>
            <th>Estado civil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Idade</td>
                <td>@cliente.Credito</td>
                <td>@cliente.DataNascimento</td>
                @if (cliente.NecessidadesEspeciais == true)
                {
                    <td>Sim</td>
                }
                else
                {
                    <td>Não</td>
                }
                <td>@cliente.EstadoCivil</td>
            </tr>
        }
    </tbody>
</table>