@model List<Fiap.Exemplo01.MVC.Web.Models.Produto>
@{
    ViewBag.Title = "Lista de produtos";
}
<br />
<h2>Lista de produtos</h2>
<br />
<a class="btn btn-default" href="/Produto/Cadastrar">Novo produto</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Valor</th>
            <th>Quantidade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
            <tr>
                <td>@prod.Nome</td>
                <td>@prod.Valor</td>
                <td>@prod.Quantidade</td>
            </tr>
        }
    </tbody>
</table>